<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Theme.AppCompat.DarkActionBar" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/eestecRed</item>
        <item name="colorPrimaryDark">@color/eestecRed</item>
        <item name="colorAccent">@color/eestecRed</item>
        <item name="background">@color/white</item>
    </style>

    <style name="AppTheme2" parent="Theme.AppCompat.DarkActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textColor">@color/eestecRed</item>
    </style>

</resources>